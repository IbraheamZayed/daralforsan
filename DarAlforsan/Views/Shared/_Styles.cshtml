@{
    var Direction = Core.UI.Locals.Direction;
    string Theme = "";
    try
    {
        var sss = Context.GetCurrentTheme();
        if (Context.GetCurrentTheme() == null)
        {
            Theme = "blue";
        }
        else
            Theme = !Context.GetCurrentTheme().Contains("darsnew") ? "blue" : Context.GetCurrentTheme();
    }
    catch
    {
        Theme = "blue";
    }
    string StyleVersion = Versioning.Css.GetCurrent(Config);
}

@*bootstrap*@
<link rel="stylesheet" href="@("/lib/bootstrap.4.3." + (string.IsNullOrEmpty(Direction) ? "rtl" : Direction) + "/css/bootstrap.min.css?v="+StyleVersion)" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />

@*Site*@
<link rel="stylesheet" href="@("/web/css/"+Theme).css?v=@StyleVersion">
<link rel="stylesheet" href="~/web/css/style.css?v=@StyleVersion">
<link rel="stylesheet" href="~/theme/_shared/site.css?v=@StyleVersion">
<link rel="stylesheet" href="@("/theme/_shared/site." + (string.IsNullOrEmpty(Direction) ? "rtl" : Direction) + ".css?v="+StyleVersion)">
 
@if (Context.GetCurrentTheme()== null)
 {
    <link rel="stylesheet" href="@("/theme/" + (string.IsNullOrEmpty(Theme) ? "blue" : Theme) + "/site.css?v="+StyleVersion )" />
 }
 else if(!Context.GetCurrentTheme().Contains("darsnew"))
{
    @* Theme *@
    <link rel="stylesheet" href="@("/theme/" + (string.IsNullOrEmpty(Theme) ? "blue" : Theme) + "/site.css?v="+StyleVersion )" />
}

