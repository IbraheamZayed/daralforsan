            @Html.EditorFor(model => model.Lat, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Lat, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(a => a.Lng)
            @Html.EditorFor(model => model.Lng, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Lng, "", new { @class = "text-danger d-none" })
