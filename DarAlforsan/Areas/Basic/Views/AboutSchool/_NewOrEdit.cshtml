        </div>
        <div class="form-group col-md-12">
            @Html.TextAreaFor(model => model.DetailsAr, new { @class = "form-control form-control-sm local-font", @rows = 3 })
            @Html.ValidationMessageFor(model => model.DetailsAr, "", new { @class = "text-danger  d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.TextAreaFor(model => model.DetailsEn, new { @class = "form-control form-control-sm local-font", @rows = 3 })
            @Html.ValidationMessageFor(model => model.DetailsEn, "", new { @class = "text-danger  d-none" })
        </div>
        <div class="form-group col-md-12">
            <partial name="~/Views/Shared/_Dropzone.cshtml" model='new ViewModels.Shared.Dropzone {AjaxLoad=true, ID="FileName-attachment",TargetControl="Logo", AcceptedFiles="image/*", MaxFiles = 1, MessageTile = DBResources.AboutSchool.Logo }' />
            @Html.HiddenFor(model => model.Logo)
        </div>
    </div>
    <div class="cmd-wrapper">
        <button type="button" onclick="aboutSchool.save('form-AboutSchool')" class="btn btn-success"><i class="fas fa-check"></i> @CoreCommand.CmdSave </button>
    </div>
</form>