@model ViewModels.Form.AboutSchool
<form id="form-AboutSchool" name="form-AboutSchool" onkeypress="aboutSchool.onformKeypress('form-AboutSchool',event)">
    @Html.HiddenFor(model => model.ID)
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.AddressAr)
            @Html.EditorFor(model => model.AddressAr, new { htmlAttributes = new { @class = "form-control form-control-md" } })
