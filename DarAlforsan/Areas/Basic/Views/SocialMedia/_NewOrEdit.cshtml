@model ViewModels.Form.SocialMedia
<form id="form-SocialMedia" name="form-SocialMedia" onkeypress="socialMedia.onformKeypress('form-SocialMedia',event)">
    @Html.HiddenFor(model => model.ID)
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.Url)
            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger d-none" })
        </div>
        <div class="col-md-12">
            <partial name="~/Views/Shared/_Dropzone.cshtml" model='new ViewModels.Shared.Dropzone {AjaxLoad = true ,ID="FileName1-attachment", TargetControl="Img", MaxFiles=1, AcceptedFiles="image/*" }' />
        </div>
        @Html.HiddenFor(model => model.Img)
        </div>
    <div class="cmd-wrapper">
        <button type="button" onclick="socialMedia.save('form-SocialMedia')" class="btn btn-success"><i class="fas fa-check"></i> @CoreCommand.CmdSave </button>
    </div>
</form>