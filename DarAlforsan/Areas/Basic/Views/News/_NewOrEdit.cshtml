@model ViewModels.Form.News
<form id="form-News" name="form-News" onkeypress="news.onformKeypress('form-News',event)">
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.AddDate)
    @Html.HiddenFor(model => model.ViewsCount)
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.TitleAr)
            @Html.EditorFor(model => model.TitleAr, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.TitleAr, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.TitleEn)
            @Html.EditorFor(model => model.TitleEn, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.TitleEn, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.TextAreaFor(model => model.DetailsAr, new { @class = "form-control form-control-sm local-font", @rows = 4 })
            @Html.ValidationMessageFor(model => model.DetailsAr, "", new { @class = "text-danger  d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.TextAreaFor(model => model.DetailsEn, new { @class = "form-control form-control-sm local-font", @rows = 4 })
            @Html.ValidationMessageFor(model => model.DetailsEn, "", new { @class = "text-danger  d-none" })
        </div>
        <div class="col-md-12">
            <partial name="~/Views/Shared/_Dropzone.cshtml" model='new ViewModels.Shared.Dropzone {AjaxLoad = true ,ID="FileName1-attachment", TargetControl="MainImg", MaxFiles=1, AcceptedFiles="image/*", MessageTile = DBResources.News.MainImg }' />
            </div>
            @Html.HiddenFor(model => model.MainImg)
        <div class="col-md-12 my-2">
            <partial name="~/Views/Shared/_Dropzone.cshtml" model='new ViewModels.Shared.Dropzone {AjaxLoad = true ,ID="FileName2-attachment", TargetControl="Imgs", MaxFiles=int.MaxValue, AcceptedFiles="image/*", MessageTile = DBResources.News.Imgs }' />
        </div>
        @Html.HiddenFor(model => model.Imgs)
        </div>
    <div class="cmd-wrapper">
        <button type="button" onclick="news.save('form-News')" class="btn btn-success"><i class="fas fa-check"></i> @CoreCommand.CmdSave </button>
    </div>
</form>