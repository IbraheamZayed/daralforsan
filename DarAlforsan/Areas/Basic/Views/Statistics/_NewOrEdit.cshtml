@model ViewModels.Form.Statistics
<form id="form-Statistics" name="form-Statistics" onkeypress="statistics.onformKeypress('form-Statistics',event)">
    @Html.HiddenFor(model => model.ID)
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.TitleAr)
            @Html.EditorFor(model => model.TitleAr, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.TitleAr, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.TitleEn)
            @Html.EditorFor(model => model.TitleEn, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.TitleEn, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.Count)
            @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            <partial name="~/Views/Shared/_Dropzone.cshtml" model='new ViewModels.Shared.Dropzone {AjaxLoad = true ,ID="FileName-attachment", TargetControl="Img", MaxFiles=1, AcceptedFiles="image/*"}' />
        </div>
        @Html.HiddenFor(model => model.Img)
        </div>
    <div class="cmd-wrapper">
        <button type="button" onclick="statistics.save('form-Statistics')" class="btn btn-success"><i class="fas fa-check"></i> @CoreCommand.CmdSave </button>
    </div>
</form>