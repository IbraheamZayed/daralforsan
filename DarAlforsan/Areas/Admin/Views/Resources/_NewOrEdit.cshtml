@model ViewModels.Form.Resource
<form id="form-Resource" name="form-Resource" onkeypress="resource.onformKeypress('form-Resource',event)">
    @Html.HiddenFor(model => model.ResourceID)
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.ModuleID)
            @Html.DropDownListFor(model => model.ModuleID, new SelectList(Model.ResourceModules, "ModuleID", "Name"), DBResources.CoreView.SelectValue, htmlAttributes: new { @class = "form-control form-control-sm default-font" })
            @Html.ValidationMessageFor(model => model.ModuleID, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.LocalValue)
            @Html.EditorFor(model => model.LocalValue, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.LocalValue, "", new { @class = "text-danger d-none" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(a => a.LatinValue)
            @Html.EditorFor(model => model.LatinValue, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.LatinValue, "", new { @class = "text-danger d-none" })
        </div>
    </div>
    <div class="cmd-wrapper">
        <button type="button" onclick="resource.save('form-Resource')" class="btn btn-success"><i class="fas fa-check"></i> @CoreCommand.CmdSave</button>
    </div>
</form>